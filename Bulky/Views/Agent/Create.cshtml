@model Agent

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Cadastrar Operador</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Number" class="p-0"></label>
            <input asp-for="Number" class="form-control">
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Team" class="p-0"></label>
            <input asp-for="Team" class="form-control">
            <span asp-validation-for="Team" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="IsAvailable" class="p-0"></label>
            <div class="custom-control custom-radio">
                <input 

            </div>
            @* <input asp-for="IsAvailable" class="form-control">
            <span asp-validation-for="IsAvailable" class="text-danger"></span> *@
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Salvar</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Agent" asp-action="Index" class="btn btn-outline-secondary border form-control">Retornar</a>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}